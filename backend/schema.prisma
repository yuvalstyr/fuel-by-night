datasource postgresql {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       Int     @id @default(autoincrement())
  name     String?
  email    String? @unique
  password String?
}

model Employee {
  id            Int     @id @default(autoincrement())
  name          String?
  salaryPerHour Float?
  active        String?
  shifts        Shift[] @relation("Shiftworker")
}

model Expense {
  id   Int       @id @default(autoincrement())
  date DateTime?
  name String?
  cost Float?
}

model Shift {
  id       Int       @id @default(autoincrement())
  start    DateTime?
  end      DateTime?
  worker   Employee? @relation("Shiftworker", fields: [workerId], references: [id])
  workerId Int?      @map("worker")

  @@index([workerId])
}