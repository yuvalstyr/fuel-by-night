generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id            String  @id @default(uuid())
  name          String
  salaryPerHour Float
  active        Boolean @default(true)
  Shift         Shift[]
}

model Expense {
  id         String  @id @default(uuid())
  name       String
  cost       Float
  date       String
  optimistic Boolean @default(false)
}

model Shift {
  id         String   @id @default(uuid())
  startDate  String
  startTime  String
  endDate    String
  endTime    String
  worker     String
  optimistic Boolean  @default(false)
  Employee   Employee @relation(fields: [worker], references: [id])

  @@index([worker], name: "Shift.worker_index")
}

model User {
  id       String  @id @default(uuid())
  name     String?
  email    String? @unique
  password String?
}
